{
  "AllowedHosts": "*",
  "StorageOptions": {
    "AppFolderName": "GameStore",
    "GameImagesFolderName": "game_images",
    "SupportedImageExtensions": [
      ".png",
      ".jpg",
      ".jpeg"
    ]
  },
  "Serilog": {
    "MinimumLevel": "Information",
    "Override": {
      "Microsoft.AspNetCore": "Warning"
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/ips.log"
        }
      }
    ]
  }
}
